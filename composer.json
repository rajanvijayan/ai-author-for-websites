{
    "name": "developer/ai-author-for-websites",
    "description": "AI-powered blog post generator for WordPress websites",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "require": {
        "php": ">=8.0",
        "rajanvijayan/ai-engine": "dev-main"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "wp-coding-standards/wpcs": "^3.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "phpcompatibility/phpcompatibility-wp": "^2.1",
        "squizlabs/php_codesniffer": "^3.8"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/rajanvijayan/ai-engine"
        }
    ],
    "autoload": {
        "psr-4": {
            "AIAuthor\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AIAuthor\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage-report",
        "phpcs": "phpcs --standard=phpcs.xml",
        "phpcbf": "phpcbf --standard=phpcs.xml",
        "compat": "phpcs -p --standard=PHPCompatibilityWP --runtime-set testVersion 8.0- --extensions=php --ignore=vendor,node_modules,tests,build .",
        "lint": [
            "@phpcs"
        ],
        "lint:fix": [
            "@phpcbf"
        ]
    },
    "scripts-descriptions": {
        "test": "Run PHPUnit tests",
        "test:coverage": "Run PHPUnit tests with code coverage",
        "phpcs": "Check code against WordPress Coding Standards",
        "phpcbf": "Auto-fix WordPress Coding Standards violations",
        "compat": "Check PHP 8.0+ compatibility",
        "lint": "Run all linting checks",
        "lint:fix": "Auto-fix linting issues"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
